{% extends "base.html.twig" %}

{% block body %}
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.errorTitle }} - {{ error.errorText }}
                </div>
                <br/>
            {% endif %}
            {% if success %}
                <div class="alert alert-success" role="alert">
                    {{ success.successTitle }} - {{ success.successText }}
                </div>
                <br/>
            {% endif %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <div style="display: flex; justify-content: space-between">
                                <h4 class="c-grey-900 mB-20"><a href="{{ path('admin_get_import_units') }}">Albetétek
                                        listája</a></h4>
                            </div>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0"
                                   width="100%">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Import forrás</th>
                                    <th>Külső ID</th>
                                    <th>Importálva</th>
                                    <th>Épület</th>
                                    <th>Emelet</th>
                                    <th>Ajtó</th>
                                    <th>Négyzetméter</th>
                                    <th>Típus</th>
                                    <th>Egyenleg</th>
                                    <th>Részesedés</th>
                                    <th>Ház azonosító</th>
                                    <th>Lakó azonosító</th>
                                    <th>Műveletek</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for unit in objUnits %}
                                    <tr>
                                        <td>{{ unit.id|e }}</td>
                                        <td>{{ unit.importSource.name }}</td>
                                        <td>{{ unit.externalId|e }}</td>
                                        <td>{{ unit.importedAt|date("Y. m. d.") }}</td>
                                        <td>{{ unit.building|e }}</td>
                                        <td>{{ unit.floor|e }}</td>
                                        <td>{{ unit.door|e }}</td>
                                        <td>{{ unit.floorArea|e }}</td>
                                        <td>{{ unit.unitType|e }}</td>
                                        <td>{{ unit.balance|e }}</td>
                                        <td>{{ unit.houseShare|e }}</td>
                                        <td>{{ unit.houseId|e }}</td>
                                        <td>{{ unit.tenantId|e }}</td>
                                        <td>
                                            <a class="readButton"
                                               href="{{ path('admin_get_import_unit_import', {'importedUnitId': unit.id}) }}">
                                                <i class="ti-plus mR-10"></i>
                                            </a>
                                            <a class="deleteButton"
                                               href="{{ path('admin_get_import_unit_delete', {'importedUnitId': unit.id}) }}">
                                                <i class="ti-trash mR-10"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const initConfirmationClickEventHandler = () => {
            $('.deleteButton').off('click').on("click", function (e) {
                e.preventDefault();

                var choice = confirm('Biztosan törölni akarod?');

                if (choice) {
                    window.location.href = $(this).attr('href');
                }
            });

            $('.readButton').off('click').on("click", function (e) {
                e.preventDefault();

                var choice = confirm('Biztosan importálni akarod?');

                if (choice) {
                    window.location.href = $(this).attr('href');
                }
            });
        };

        $('.paginate_button').on('click', () => initConfirmationClickEventHandler());

        initConfirmationClickEventHandler();
    </script>
{% endblock %}