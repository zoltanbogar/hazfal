{% extends "base.html.twig" %}

{% block body %}
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.errorTitle }} - {{ error.errorText }}
                </div>
                <br/>
            {% endif %}
            {% if success %}
                <div class="alert alert-success" role="alert">
                    {{ success.successTitle }} - {{ success.successText }}
                </div>
                <br/>
            {% endif %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <div style="display: flex; justify-content: space-between">
                                <h4 class="c-grey-900 mB-20">
                                    <a href="{{ path('admin_get_import_payments') }}">
                                        Befizetések listája
                                    </a>
                                </h4>
                            </div>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0"
                                   width="100%">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Import forrás</th>
                                    <th>Külső ID</th>
                                    <th>Importálva</th>
                                    <th>Albetét azonosító</th>
                                    <th>Fizetési mód azonosító</th>
                                    <th>Befizetve</th>
                                    <th>Könyvelve</th>
                                    <th>Bizonylatszám</th>
                                    <th>Összeg</th>
                                    <th>Felhasználó azonosító</th>
                                    <th>Technikai felhasználó azonosító</th>
                                    <th>Műveletek</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for payment in objPayments %}
                                    <tr>
                                        <td>{{ payment.id|e }}</td>
                                        <td>{{ payment.importSource.name }}</td>
                                        <td>{{ payment.externalId|e }}</td>
                                        <td>{{ payment.importedAt|date("Y. m. d.") }}</td>
                                        <td>{{ payment.unitId|e }}</td>
                                        <td>{{ payment.paymentMethodId|e }}</td>
                                        <td>{{ payment.paymentDate|date("Y. m. d.") }}</td>
                                        <td>{{ payment.bookingDate|date("Y. m. d.") }}</td>
                                        <td>{{ payment.receiptNumber|e }}</td>
                                        <td>{{ payment.amount|e }}</td>
                                        <td>{{ payment.userId|e }}</td>
                                        <td>{{ payment.houseUserId|e }}</td>
                                        <td>
                                            <a class="readButton"
                                               href="{{ path('admin_get_import_payment_import', {'importedPaymentId': payment.id}) }}">
                                                <i class="ti-plus mR-10"></i>
                                            </a>
                                            <a class="deleteButton"
                                               href="{{ path('admin_get_import_payment_delete', {'importedPaymentId': payment.id}) }}">
                                                <i class="ti-trash mR-10"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const initConfirmationClickEventHandler = () => {
            $('.deleteButton').off('click').on("click", function (e) {
                e.preventDefault();

                var choice = confirm('Biztosan törölni akarod?');

                if (choice) {
                    window.location.href = $(this).attr('href');
                }
            });

            $('.readButton').off('click').on("click", function (e) {
                e.preventDefault();

                var choice = confirm('Biztosan importálni akarod?');

                if (choice) {
                    window.location.href = $(this).attr('href');
                }
            });
        };

        $('.paginate_button').on('click', () => initConfirmationClickEventHandler());

        initConfirmationClickEventHandler();
    </script>
{% endblock %}
