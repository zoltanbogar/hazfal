{% extends "base.html.twig" %}

{% block body %}
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.strParameter }} - {{ error.errorText }}
                </div>
                <br/>
            {% endif %}
            {% if success %}
                <div class="alert alert-success" role="alert">
                    Sikeres mentés!
                </div>
                <br/>
            {% endif %}
            <div class="row">
                <div class="col-md-12">
                    <h2>
                        #{{ objUser.id }} felhasználó
                        <span class="pull-right">
                        <a href="{{ path('admin_get_users') }}" class="btn btn-secondary">
                            <i class="ti-angle-left mR-10"></i> VISSZA</a>
                        </span>
                    </h2>
                </div>
            </div>
            <form action="{{ path('admin_post_user_edit', {'userId': objUser.id}) }}" method="post">
                <div class="row gap-20 masonry pos-r">
                    <div class="masonry-sizer col-md-6"></div>
                    <div class="masonry-item col-md-6">
                        <div class="bgc-white p-20 bd">
                            <h6 class="c-grey-900">Általános</h6>
                            <div class="mT-30">
                                <div class="form-group">
                                    <label for="inputId">Id</label>
                                    <input type="text" class="form-control" name="inputId" id="inputId"
                                           aria-describedby="inputId" value="{{ objUser.id }}" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail">Email cím</label>
                                    <input type="text" class="form-control" id="inputEmail" name="inputEmail"
                                           aria-describedby="inputEmail"
                                           value="{{ objUser.email }}" {{ isEditable ?: 'disabled' }}>
                                </div>
                                <div class="form-group">
                                    <label for="inputPhoneNumber">Telefonszám</label>
                                    <input type="text" class="form-control" id="inputPhoneNumber" name="inputPhoneNumber"
                                           aria-describedby="inputPhoneNumber"
                                           value="{{ objUser.localPhoneNumber }}" {{ isEditable ?: 'disabled' }}>
                                </div>
                                <div class="form-group">
                                    <label for="inputSex">Nem</label>
                                    <input type="text" class="form-control" id="inputSex" name="inputSex"
                                           aria-describedby="inputSex"
                                           value="{{ objUser.sex == 1 ? 'Férfi' : 'Nő' }}" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputIsActive">Státusz</label>
                                    <input type="text" class="form-control" id="inputIsActive" name="inputIsActive"
                                           aria-describedby="inputIsActive"
                                           value="{{ objUser.enabled == 0 ? 'Nem aktív' : 'Aktív' }}" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputFirstName">Keresztnév</label>
                                    <input type="text" class="form-control" id="inputFirstName" name="inputFirstName"
                                           aria-describedby="inputFirstName"
                                           value="{{ objUser.firstName }}" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputLastName">Vezetéknév</label>
                                    <input type="text" class="form-control" id="inputLastName"
                                           name="inputLastName"
                                           placeholder="Pl.: HU"
                                           value="{{ objUser.lastName }}" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputDateOfBirth">Születési idő</label>
                                    <input type="text" class="form-control" id="inputDateOfBirth"
                                           name="inputDateOfBirth"
                                           placeholder="Pl.: HU"
                                           value="{{ objUser.dateOfBirth | date("Y. m. d.") }}" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputPlaceOfBirth">Születési hely</label>
                                    <input type="text" class="form-control" id="inputPlaceOfBirth"
                                           name="inputPlaceOfBirth"
                                           placeholder="Pl.: HU"
                                           value="{{ objUser.placeOfBirth }}" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputOfficialAddress">Cím</label>
                                    <input type="text" class="form-control" id="inputOfficialAddress"
                                           name="inputOfficialAddress"
                                           placeholder="Pl.: HU"
                                           value="{{ objUser.officialAddress }}" {{ isEditable ?: 'disabled' }}>
                                </div>
                                <div class="form-group">
                                    <label for="inputCurrentLocation">Tartózkodási hely</label>
                                    <input type="text" class="form-control" id="inputCurrentLocation"
                                           name="inputCurrentLocation"
                                           placeholder="Pl.: HU"
                                           value="{{ objUser.currentLocation }}" {{ isEditable ?: 'disabled' }}>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="masonry-item col-md-6">
                        <div class="bgc-white p-20 bd">
                            <h6 class="c-grey-900">Leírás</h6>
                            <div class="mT-30">
                                <div class="form-group">
                                    <label for="inputCompanyName">Bio</label>
                                    <textarea rows="10" name="inputBio" class="form-control" {{ isEditable ?: 'disabled' }}>{{ objUser.bio }}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="masonry-item col-md-6">
                        <div class="bgc-white p-20 bd">
                            <h6 class="c-grey-900">Dátum</h6>
                            <div class="mT-30">
                                <div class="form-group">
                                    <label for="inputCreatedAt">Utolsó bejelentkezés</label>
                                    <input type="text" class="form-control" id="inputCreatedAt"
                                           aria-describedby="inputCreatedAt"
                                           value="{{ objUser.lastLogin|date("Y. m. d. H:i") }}" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputCreatedAt">Regisztráció dátuma</label>
                                    <input type="text" class="form-control" id="inputCreatedAt"
                                           aria-describedby="inputCreatedAt"
                                           value="{{ objUser.registrationDate|date("Y. m. d. H:i") }}" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% if isEditable == TRUE %}
                        <div class="masonry-item col-md-6">
                            <div class="bgc-white p-20 bd">
                                <div class="mT-30 ">
                                    <input type="submit"
                                           class="btn btn-primary" value="{{ isNew ? 'Mentés' : 'Módosítás' }}"/>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </form>
        </div>
    </main>
{% endblock body %}
