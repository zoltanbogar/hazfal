{% extends "base.html.twig" %}

{% block body %}
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.errorTitle }} - {{ error.errorText }}
                </div>
                <br/>
            {% endif %}
            {% if success %}
                <div class="alert alert-success" role="alert">
                    Sikeres törlés!
                </div>
                <br/>
            {% endif %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <div style="display: flex; justify-content: space-between">
                                <h4 class="c-grey-900 mB-20"><a href="{{ path('admin_get_users') }}">Felhasználók listája</a></h4>
                            </div>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0"
                                   width="100%">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Felhasználónév</th>
                                    <th>E-mail cím</th>
                                    <th>Név</th>
                                    <th>Telefonszám</th>
                                    <th>Műveletek</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in objUsers %}
                                    <tr>
                                        <td>{{ user.id|e }}</td>
                                        <td>{{ user.username|e }}</td>
                                        <td>{{ user.email|e }}</td>
                                        <td>{{ user.lastName|e }} {{ user.firstName|e }}</td>
                                        <td>{{ user.localPhoneNumber|e }}</td>
                                        <td>
                                            <a class="readButton"
                                               href="{{ path('admin_get_user_read', {'userId': user.id}) }}">
                                                <i class="ti-search mR-10"></i>
                                            </a>
                                            <a class="editButton"
                                               href="{{ path('admin_get_user_edit', {'userId': user.id}) }}">
                                                <i class="ti-pencil mR-10"></i>
                                            </a>
                                            {% if app.user.id != user.id %}
                                                <a class="deleteButton"
                                                   href="{{ path('admin_get_user_delete', {'userId': user.id}) }}">
                                                    <i class="ti-trash mR-10"></i>
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('.deleteButton').on("click", function (e) {
            e.preventDefault();

            var choice = confirm('Biztosan törölni akarod?');

            if (choice) {
                window.location.href = $(this).attr('href');
            }
        });
    </script>
{% endblock %}
