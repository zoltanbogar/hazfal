{% extends "base.html.twig" %}

{% block body %}
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.errorTitle }} - {{ error.errorText }}
                </div>
                <br/>
            {% endif %}
            {% if success %}
                <div class="alert alert-success" role="alert">
                    {{ success.successTitle }} - {{ success.successText }}
                </div>
                <br/>
            {% endif %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <div style="display: flex; justify-content: space-between">
                                <h4 class="c-grey-900 mB-20"><a href="{{ path('admin_get_import_users') }}">Felhasználók
                                        listája</a></h4>
                            </div>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0"
                                   width="100%">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Import forrás</th>
                                    <th>Külső ID</th>
                                    <th>Importálva</th>
                                    <th>Név</th>
                                    <th>Születési idő</th>
                                    <th>Születési hely</th>
                                    <th>Telefonszám</th>
                                    <th>Nem</th>
                                    <th>Vezetékes telefonszám</th>
                                    <th>Szig. szám</th>
                                    <th>Lakcím</th>
                                    <th>Tartozkodási hely</th>
                                    <th>Token</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in objUsers %}
                                    <tr>
                                        <td>{{ user.id|e }}</td>
                                        <td>{{ user.importSource.name }}</td>
                                        <td>{{ user.externalId|e }}</td>
                                        <td>{{ user.importedAt|date("Y. m. d.") }}</td>
                                        <td>{{ user.firstName ~ " " ~ user.lastName }}</td>
                                        <td>{{ user.dateOfBirth|date("Y. m. d.") }}</td>
                                        <td>{{ user.placeOfBirth|e }}</td>
                                        <td>{{ user.sex|e }}</td>
                                        <td>{{ user.phoneNumber|e }}</td>
                                        <td>{{ user.localPhoneNumber|e }}</td>
                                        <td>{{ user.idNumber|e }}</td>
                                        <td>{{ user.officialAddress|e }}</td>
                                        <td>{{ user.currentLocation|e }}</td>
                                        <td>{{ user.joinToken|e }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock body %}
